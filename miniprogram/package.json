{
  "name": "production-management-miniprogram",
  "version": "1.0.0",
  "description": "生产施工管理系统小程序端",
  "main": "main.js",
  "scripts": {
    "dev": "uni build --watch",
    "build": "uni build",
    "build:h5": "uni build --platform h5",
    "build:mp-weixin": "uni build --platform mp-weixin",
    "build:app": "uni build --platform app"
  },
  "dependencies": {
    "@dcloudio/uni-app": "^3.0.0",
    "@dcloudio/uni-components": "^3.0.0",
    "@dcloudio/uni-h5": "^3.0.0",
    "@dcloudio/uni-mp-weixin": "^3.0.0",
    "vue": "^3.3.8",
    "pinia": "^2.1.7",
    "dayjs": "^1.11.10",
    "js-cookie": "^3.0.5"
  },
  "devDependencies": {
    "@dcloudio/uni-cli-shared": "^3.0.0",
    "@dcloudio/vite-plugin-uni": "^3.0.0",
    "@types/node": "^20.10.4",
    "@types/js-cookie": "^3.0.6",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "~5.3.3",
    "vite": "^5.0.8"
  },
  "uni-app": {
    "scripts": {
      "mp-weixin": {
        "title": "生产施工管理系统",
        "env": {
          "UNI_PLATFORM": "mp-weixin"
        },
        "define": {
          "MP-WEIXIN": true
        }
      }
    }
  }
} 